<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearlayout"
    tools:ignore="MissingDefaultResource">


    <io.github.farshidroohi.LineChart
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/line_chart"
        android:orientation="vertical"
        app:chart_bg_color="#2E3975"
        app:chart_line_color="#35FFFFFF"
        app:chart_line_size="4dp"
        app:chart_padding_bottom="60dp"
        app:chart_padding_left="30dp"
        app:chart_padding_right="30dp"
        app:chart_padding_top="20dp"
        />


</LinearLayout>